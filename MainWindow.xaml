<Window x:Class="Arcadia.UI.MainWindow"xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"xmlns:d="http://schemas.microsoft.com/expression/blend/2008"xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"mc:Ignorable="d"Title="Arcadia Frontend"Height="1080"Width="1920"WindowState="Maximized"WindowStyle="None"Background="Black"KeyDown="Window_KeyDown"><Window.Resources>
    <!-- Style for the main navigation buttons in the header -->
    <Style x:Key="HeaderButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="10,0"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#00D9FF"/>
                            <Setter Property="BorderBrush" Value="#00D9FF"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#1AFFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</Window.Resources>

<Grid>
    <!-- Background Video/Theme -->
    <MediaElement x:Name="BackgroundVideo" 
                  LoadedBehavior="Manual" 
                  UnloadedBehavior="Stop"
                  Stretch="UniformToFill"
                  Opacity="0.3"/>

    <!-- Main Content Grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>     <!-- Row 0: Header/Navigation Buttons -->
            <RowDefinition Height="*"/>        <!-- Row 1: ContentArea -->
            <RowDefinition Height="200"/>     <!-- Row 2: Footer/Keybinds -->
        </Grid.RowDefinitions>

        <!-- Row 0: Header Section -->
        <Grid Grid.Row="0" Background="#20000000">
            <!-- Arcadia Title and Clock -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0">
                <TextBlock Text="ARCADIA" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="#00D9FF"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="ClockText" 
                           FontSize="20" 
                           Foreground="White" 
                           Margin="20,0,0,0"
                           VerticalAlignment="Bottom"
                           Text="--:--:--"/>
            </StackPanel>

            <!-- NEW: Top Navigation Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Button Content="ðŸŽ® Game Wheel" 
                        Click="GamesButton_Click" 
                        Style="{StaticResource HeaderButtonStyle}"/>
                <Button Content="ðŸ“š Library" 
                        Click="LibraryButton_Click" 
                        Style="{StaticResource HeaderButtonStyle}"/>
                <Button Content="âš™ï¸ Settings" 
                        Click="SettingsButton_Click" 
                        Style="{StaticResource HeaderButtonStyle}"/>
                <Button Content="ðŸ”„ Updater" 
                        Click="UpdaterButton_Click" 
                        Style="{StaticResource HeaderButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Row 1: MAIN CONTENT AREA (ContentArea) -->
        <Grid x:Name="ContentArea" Grid.Row="1">
            <!-- This Grid will host the UserControls (tabs) switched by SwitchTab() -->
            <!-- The default view (GameWheelTab) is set in the MainWindow constructor -->
        </Grid>
        
        <!-- Row 2: Footer Section (Keybinds) -->
        <Grid Grid.Row="2" Background="#10FFFFFF">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="#20FFFFFF" Padding="15,10" Margin="10" CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ENTER" FontSize="20" Foreground="#00D9FF" Margin="0,0,10,0" FontWeight="Bold"/>
                        <TextBlock Text="Launch Game" FontSize="18" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#20FFFFFF" Padding="15,10" Margin="10" CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="F1" FontSize="20" Foreground="#00D9FF" Margin="0,0,10,0" FontWeight="Bold"/>
                        <TextBlock Text="Settings" FontSize="18" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#20FFFFFF" Padding="15,10" Margin="10" CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="F2" FontSize="20" Foreground="#00D9FF" Margin="0,0,10,0" FontWeight="Bold"/>
                        <TextBlock Text="Search" FontSize="18" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#20FFFFFF" Padding="15,10" Margin="10" CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ESC" FontSize="20" Foreground="#00D9FF" Margin="0,0,10,0" FontWeight="Bold"/>
                        <TextBlock Text="Exit" FontSize="18" Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>

    <!-- Loading Overlay -->
    <Grid x:Name="LoadingOverlay" Background="#DD000000" Visibility="Collapsed">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="LOADING..." 
                       FontSize="48" 
                       Foreground="#00D9FF" 
                       HorizontalAlignment="Center"
                       FontWeight="Bold"/>
            <ProgressBar Width="400" 
                         Height="10" 
                         Margin="0,30,0,0"
                         IsIndeterminate="True"
                         Foreground="#00D9FF"/>
        </StackPanel>
    </Grid>
</Grid>
</Window>