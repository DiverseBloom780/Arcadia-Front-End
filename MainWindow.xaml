<Window x:Class="Arcadia.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Arcadia Frontend" 
        Height="1080" 
        Width="1920"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <!-- Background Video/Theme -->
        <MediaElement x:Name="BackgroundVideo" 
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Stop"
                      Stretch="UniformToFill"
                      Opacity="0.3"/>

        <!-- Main Content Grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Background="#20000000">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0">
                    <TextBlock Text="ARCADIA" 
                               FontSize="48" 
                               FontWeight="Bold" 
                               Foreground="#00D9FF"
                               FontFamily="Segoe UI Light"/>
                    <TextBlock x:Name="PlatformText" 
                               Text="ALL GAMES" 
                               FontSize="24" 
                               Foreground="White" 
                               Margin="30,15,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="40,0">
                    <TextBlock x:Name="GameCountText" 
                               Text="0 Games" 
                               FontSize="18" 
                               Foreground="White" 
                               Margin="0,0,20,0"/>
                    <TextBlock x:Name="ClockText" 
                               FontSize="18" 
                               Foreground="White"/>
                </StackPanel>
            </Grid>

            <!-- Game Wheel Section -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Game Wheel -->
                <Viewbox Grid.Column="0" Stretch="Uniform" Margin="50">
                    <Canvas x:Name="GameWheelCanvas" 
                            Width="600" 
                            Height="800"
                            ClipToBounds="True"/>
                </Viewbox>

                <!-- Game Details Panel -->
                <Grid Grid.Column="1" Margin="50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Game Logo -->
                    <Image x:Name="GameLogo" 
                           Grid.Row="0"
                           Height="150"
                           Stretch="Uniform"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,30"/>

                    <!-- Game Metadata -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock x:Name="GameTitle" 
                                   FontSize="42" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock x:Name="GameYear" 
                                       FontSize="20" 
                                       Foreground="#CCCCCC" 
                                       Margin="0,0,20,0"/>
                            <TextBlock x:Name="GameGenre" 
                                       FontSize="20" 
                                       Foreground="#CCCCCC" 
                                       Margin="0,0,20,0"/>
                            <TextBlock x:Name="GamePublisher" 
                                       FontSize="20" 
                                       Foreground="#CCCCCC"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Game Description and Media -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="GameDescription" 
                                       FontSize="18" 
                                       Foreground="#DDDDDD" 
                                       TextWrapping="Wrap"
                                       LineHeight="28"/>
                        </ScrollViewer>

                        <!-- Game Stats -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,20,0,0">
                            <Border Background="#20FFFFFF" Padding="15,10" Margin="0,0,10,0" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="PLAY TIME" FontSize="12" Foreground="#AAAAAA"/>
                                    <TextBlock x:Name="PlayTimeText" Text="0h" FontSize="20" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#20FFFFFF" Padding="15,10" Margin="0,0,10,0" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="TIMES PLAYED" FontSize="12" Foreground="#AAAAAA"/>
                                    <TextBlock x:Name="TimesPlayedText" Text="0" FontSize="20" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#20FFFFFF" Padding="15,10" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="PLAYERS" FontSize="12" Foreground="#AAAAAA"/>
                                    <TextBlock x:Name="PlayerCountText" Text="1" FontSize="20" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Footer Section -->
            <Grid Grid.Row="2" Background="#20000000">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Background="#20FFFFFF" Padding="15,10" Margin="10" CornerRadius="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="↑↓" FontSize="20" Foreground="#00D9FF" Margin="0,0,10,0" FontWeight="Bold"/>
                            <TextBlock Text="Navigate" FontSize="18" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#20FFFFFF" Padding="15,10" Margin="10" CornerRadius="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ENTER" FontSize="20" Foreground="#00D9FF" Margin="0,0,10,0" FontWeight="Bold"/>
                            <TextBlock Text="Launch" FontSize="18" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#20FFFFFF" Padding="15,10" Margin="10" CornerRadius="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="F1" FontSize="20" Foreground="#00D9FF" Margin="0,0,10,0" FontWeight="Bold"/>
                            <TextBlock Text="Settings" FontSize="18" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#20FFFFFF" Padding="15,10" Margin="10" CornerRadius="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="F2" FontSize="20" Foreground="#00D9FF" Margin="0,0,10,0" FontWeight="Bold"/>
                            <TextBlock Text="Search" FontSize="18" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#20FFFFFF" Padding="15,10" Margin="10" CornerRadius="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ESC" FontSize="20" Foreground="#00D9FF" Margin="0,0,10,0" FontWeight="Bold"/>
                            <TextBlock Text="Exit" FontSize="18" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Background="#DD000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="LOADING..." 
                           FontSize="48" 
                           Foreground="#00D9FF" 
                           HorizontalAlignment="Center"
                           FontWeight="Bold"/>
                <ProgressBar Width="400" 
                             Height="10" 
                             Margin="0,30,0,0"
                             IsIndeterminate="True"
                             Foreground="#00D9FF"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
